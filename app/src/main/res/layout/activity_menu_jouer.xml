<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whitecasse"
    android:layout_height="match_parent">

    <!-- Icone de maison en haut à gauche -->
    <ImageButton
        android:id="@+id/homeIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_home"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goToMainMenu" />

    <!-- TextView centré avec le texte "Match" -->
    <TextView
        android:id="@+id/textViewMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginRight="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/homeIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/gridLayoutZone1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/text_color_secondary"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/homeIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Bouton Solo -->
        <Button
            android:id="@+id/buttonSolo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_background_menu_jouer"
            android:text="Solo"
            app:backgroundTint="@null"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            android:elevation="4dp" />

        <!-- Bouton Équipe -->
        <Button
            android:id="@+id/buttonEquipe"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_background_menu_jouer"
            android:text="Équipe"
            app:backgroundTint="@null"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            android:elevation="4dp" />

        <!-- Icone de personnage centrée sous les boutons -->
        <LinearLayout
            android:id="@+id/iconContainer"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            app:layout_constraintTop_toBottomOf="@id/homeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <!-- Icône de personnage initial -->
            <ImageView
                android:id="@+id/iconPerson"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:contentDescription="Personnage"
                android:src="@drawable/ic_person" />

            <!-- Icône d'ajout de personnage -->
            <ImageView
                android:id="@+id/iconAddPerson"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:contentDescription="Ajouter Personnage"
                android:src="@drawable/ic_add_person"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </GridLayout>

    <!-- Nouveau GridLayout avec deux TextView -->
    <GridLayout
        android:id="@+id/gridLayoutZone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:columnCount="1"
        android:rowCount="3"
        android:background="@color/text_color_secondary"
        app:layout_constraintTop_toBottomOf="@id/gridLayoutZone1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Premier TextView -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parametre : "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Deuxième TextView -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regle : "
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black"
            android:gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:columnCount="3"
            android:rowCount="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button310"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/btn_background_menu_jouer"
                android:elevation="4dp"
                android:text="301"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button510"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/btn_background_menu_jouer"
                android:elevation="4dp"
                android:text="501"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/buttonPerso"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/btn_background_menu_jouer"
                android:elevation="4dp"
                android:text="Perso"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                app:backgroundTint="@null" />

        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayoutWithText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:columnCount="4"
            android:rowCount="3"
            android:alignmentMode="alignMargins">

            <!-- TextView for Column 1 Header -->
            <TextView
                android:id="@+id/textColumn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Straight"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- TextView for Column 2 Header -->
            <TextView
                android:id="@+id/textColumn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:gravity="center"
                android:text="Double"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <!-- TextView for Column 3 Header -->
            <TextView
                android:id="@+id/textColumn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:gravity="center"
                android:text="Master"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <!-- First Row Header -->
            <TextView
                android:id="@+id/textRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:text="In"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <!-- CheckBox in Row 1, Column 1 -->
            <CheckBox
                android:id="@+id/checkBox0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="8dp"/>

            <!-- CheckBox in Row 1, Column 2 -->
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="8dp"/>

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_margin="8dp"/>

            <!-- Second Row Header -->
            <TextView
                android:id="@+id/textRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="center"
                android:text="Out"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <!-- CheckBox in Row 2, Column 1 -->
            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="8dp"/>

            <!-- CheckBox in Row 2, Column 2 -->
            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="8dp"/>

            <!-- CheckBox in Row 2, Column 3 -->
            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_margin="8dp"/>

        </GridLayout>


    </GridLayout>

    <!-- Bouton "Start" centré en bas -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:backgroundTint="@null"
        android:background="@drawable/btn_background_menu_jouer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp" />

    <!-- Bottom bar avec deux boutons : Accueil et Statistique -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:background="@color/bottom_bar_color"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <!-- Bouton Accueil -->
        <Button
            android:id="@+id/buttonAccueil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="Accueil"
            android:textColor="@color/text_color_secondary"
            android:textSize="16sp" />

        <!-- Bouton Statistique -->
        <Button
            android:id="@+id/buttonStatistique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="Statistique"
            android:textColor="@color/text_color_secondary"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
