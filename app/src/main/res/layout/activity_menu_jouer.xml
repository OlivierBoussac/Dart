<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecasse">

    <!-- Icone de maison en haut à gauche -->
    <ImageButton
        android:id="@+id/homeIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Home"
        android:onClick="goToMainMenu"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView centré avec le texte "Match" -->
    <TextView
        android:id="@+id/textViewMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="170dp"
        android:text="Match"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/homeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayoutZone1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_menu_jouer"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeIcon">

        <!-- Bouton Solo -->
        <Button
            android:id="@+id/buttonSolo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/btn_background_menu_jouer"
            android:elevation="4dp"
            android:text="Solo"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            app:backgroundTint="@null" />

        <!-- Bouton Équipe -->
        <Button
            android:id="@+id/buttonEquipe"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/btn_background_menu_jouer"
            android:elevation="4dp"
            android:text="Équipe"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            app:backgroundTint="@null" />

        <!-- Conteneur pour les icônes et les TextViews -->
        <GridLayout
            android:id="@+id/iconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:columnCount="4"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeIcon">


        </GridLayout>
    </GridLayout>


    <!-- Nouveau GridLayout avec deux TextView -->
    <GridLayout
        android:id="@+id/gridLayoutZone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_menu_jouer"
        android:columnCount="1"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridLayoutZone1">

        <!-- Premier TextView -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Paramètres : "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Deuxième TextView -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="Type de parties : "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:columnCount="3"
            android:rowCount="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button310"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/btn_background_menu_jouer"
                android:elevation="4dp"
                android:text="301"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button510"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/btn_background_menu_jouer"
                android:elevation="4dp"
                android:text="501"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/buttonPerso"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/btn_background_menu_jouer"
                android:elevation="4dp"
                android:text="Perso"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp"
                app:backgroundTint="@null" />

        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayoutWithText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:rowCount="3">

            <!-- TextView for Column 1 Header -->
            <TextView
                android:id="@+id/textColumn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Simple"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- TextView for Column 2 Header -->
            <TextView
                android:id="@+id/textColumn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Double"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- TextView for Column 3 Header -->
            <TextView
                android:id="@+id/textColumn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Double ou triple"
                android:textSize="16dp"
                android:textStyle="bold" />
            <!-- First Row Header -->
            <TextView
                android:id="@+id/textRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Debut"
                android:textSize="16dp"
                android:textStyle="bold"
                android:buttonTint="@color/grey" />

            <!-- CheckBox in Row 1, Column 1 -->
            <CheckBox
                android:id="@+id/checkBoxDebutSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:buttonTint="@color/grey" />

            <!-- CheckBox in Row 1, Column 2 -->
            <CheckBox
                android:id="@+id/checkBoxDebutDouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:buttonTint="@color/grey" />

            <CheckBox
                android:id="@+id/checkBoxDebutMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:buttonTint="@color/grey" />

            <!-- Second Row Header -->
            <TextView
                android:id="@+id/textRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Fin"
                android:textSize="16dp"
                android:textStyle="bold" />

            <!-- CheckBox in Row 2, Column 1 -->
            <CheckBox
                android:id="@+id/checkBoxFinSimple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:buttonTint="@color/grey" />

            <!-- CheckBox in Row 2, Column 2 -->
            <CheckBox
                android:id="@+id/checkBoxFinDouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:buttonTint="@color/grey" />

            <!-- CheckBox in Row 2, Column 3 -->
            <CheckBox
                android:id="@+id/checkBoxFinMaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:buttonTint="@color/grey" />

        </GridLayout>


    </GridLayout>

    <!-- Bouton "Start" centré en bas -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_background_menu_jouer"
        android:text="Start"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom bar avec deux boutons : Accueil et Statistique -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:background="@color/bottom_bar_color"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Bouton Accueil -->
        <Button
            android:id="@+id/buttonAccueil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="Accueil"
            android:textColor="@color/text_color_secondary"
            android:textSize="16sp" />

        <!-- Bouton Statistique -->
        <Button
            android:id="@+id/buttonStatistique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="Statistique"
            android:textColor="@color/text_color_secondary"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
